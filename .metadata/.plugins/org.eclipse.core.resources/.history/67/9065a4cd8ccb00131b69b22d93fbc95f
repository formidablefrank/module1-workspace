package com.example.edemo.dao;

import java.math.BigDecimal;

import com.example.edemo.model.BankAccount;

public class BankAccountExampleDao implements BankAccountDao{
	private BankAccount[] bankAccounts;
	
	public BankAccountExampleDao(){
		bankAccounts = new BankAccount[2];
		bankAccounts[0] = new BankAccount("","", new BigDecimal("3000.00"));
		bankAccounts[1] = new BankAccount("","", new BigDecimal("4000.00"));
	}
	
	public void updateAccount(BankAccount bankAccount) {
	}

	public BankAccount findAccount(String sourceAccountNumber) {
		for(int i = 0; i<bankAccounts.length; i++){
			if(bankAccounts[i].getAccountNumber().equals(sourceAccountNumber)){
				return bankAccounts[i];
			}
			else{
				continue;
			}
		}
		return null;
	}
}
